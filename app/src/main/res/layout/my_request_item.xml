<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_8dp"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_marginRight="@dimen/dimen_16dp"
    android:layout_marginLeft="@dimen/dimen_16dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_details_container"
            android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/request_no_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_no"
                android:textAllCaps="true"
                android:textSize="8sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/request_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/request_no_txt"
                android:layout_toStartOf="@id/dash_line_1"
                android:fontFamily="sans-serif-medium"
                android:minWidth="48dp"
                android:text="@string/_123"
                android:textColor="@color/BlackTextColor"
                android:textSize="9sp" />

            <View
                android:id="@+id/dash_line_1"
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentEnd="true"
                android:background="@color/MediumGrayColor" />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_txt"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_12_10_2020"
                    android:textColor="@color/BlackTextColor"
                    android:textSize="9sp" />

                <View
                    android:id="@+id/dash_line_2"
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/MediumGrayColor" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/request_quotation_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:layout_gravity="center_vertical"
                android:background="@drawable/login_bordershape"
                android:visibility="visible"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/request_quotation_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/eye_img"
                    android:layout_toRightOf="@id/eye_img"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/view_quotation"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <ImageView
                    android:id="@+id/eye_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/eye"
                    app:tint="@color/whiteTextColor" />

            </RelativeLayout>


        </LinearLayout>





        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/MediumGrayColor" />

        <LinearLayout
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:baselineAligned="false"
            android:visibility="visible"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/reject_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/request_border"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/reject_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toEndOf="@id/cross_img"
                    android:layout_toRightOf="@id/cross_img"
                    android:text="@string/reject"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/cross_img"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/bluecross"
                    app:tint="@color/colorPrimaryDark" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/accept_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/request_border"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/accept_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/accept"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toStartOf="@id/accept_txt"
                    android:layout_toLeftOf="@id/accept_txt"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/accept" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/accepted_img"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginStart="48dp"
        android:visibility="gone"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/acceptednobckgrnd"
        android:scaleType="fitCenter"
        android:alpha="0.65"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/rejected_img"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:visibility="gone"
        android:layout_marginStart="48dp"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/croprejectednobckgrnd"
        android:scaleType="fitCenter"
        android:alpha="0.25"
        android:contentDescription="@string/todo" />

</androidx.cardview.widget.CardView>