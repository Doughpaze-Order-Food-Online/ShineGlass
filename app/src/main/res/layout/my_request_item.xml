<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/request_no_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_no"
            android:textAllCaps="true"
            android:textSize="8sp"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/request_no.value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:layout_below="@id/request_no_txt"
            android:textSize="14sp"
            android:text="@string/_123"
            android:textColor="@color/BlackTextColor"
            android:fontFamily="sans-serif-medium" />
        
        <View
            android:id="@+id/dash_line_1"
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/MediumGrayColor"
            android:layout_toEndOf="@id/request_no.value"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@id/request_no.value"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_toEndOf="@id/dash_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textAllCaps="true"
            android:textSize="8sp"
            tools:ignore="SmallSp"
            android:layout_toRightOf="@id/dash_line_1" />
        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_txt"
            android:layout_toEndOf="@id/dash_line_1"
            android:textSize="14sp"
            android:text="@string/_12_10_2020"
            android:textColor="@color/BlackTextColor"
            android:fontFamily="sans-serif-medium"
            android:layout_toRightOf="@id/dash_line_1" />

        <View
            android:id="@+id/dash_line_2"
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/LightGrayColor"
            android:layout_toEndOf="@id/date_value"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/date_value"
            android:layout_marginStart="16dp" />

        <RelativeLayout
            android:id="@+id/request_quotation_btn"
            android:layout_toRightOf="@id/dash_line_2"
            android:layout_width="128dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:layout_marginLeft="16dp"
            android:paddingBottom="4dp"
            android:layout_centerVertical="true"
            android:background="@drawable/login_bordershape"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/dash_line_2">

            <TextView
                android:id="@+id/request_quotation_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/view_quotation"
                android:layout_toEndOf="@id/eye_img"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:textColor="@color/whiteTextColor"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="SmallSp"
                android:layout_toRightOf="@id/eye_img" />
            <ImageView
                android:id="@+id/eye_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/eye"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:contentDescription="@string/todo"
                android:layout_marginEnd="4dp"
                app:tint="@color/whiteTextColor" />

        </RelativeLayout>

    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="24dp"
            android:background="@color/MediumGrayColor"/>

        <LinearLayout
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <RelativeLayout
                android:id="@+id/reject_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/request_border"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/reject_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/cross_img"
                    android:text="@string/reject"
                    android:textAllCaps="true"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/cross_img"
                    android:layout_marginLeft="8dp" />
                <ImageView
                    android:id="@+id/cross_img"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/bluecross"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo"
                    app:tint="@color/colorPrimaryDark" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/accept_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/request_border"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/accept_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/accept"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/accept"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/accept_txt"
                    android:contentDescription="@string/todo"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/accept_txt"
                    android:layout_marginEnd="8dp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>