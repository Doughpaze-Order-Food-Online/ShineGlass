<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_16dp">

    <TextView
        android:id="@+id/order_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/order_details"
        android:textAllCaps="true"
        android:textColor="@color/BlackTextColor"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/dimen_18sp"/>

    <ImageView
        android:id="@+id/back_btn_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:tint="@color/colorPrimaryDark"
        app:tint="@color/colorPrimaryDark"
        tools:ignore="UseAppTint"
        android:contentDescription="@string/todo" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_below="@id/order_details_txt"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_id"
                android:textAllCaps="true"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/order_id_value_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_toEndOf="@id/contact_txt"
                android:layout_alignParentEnd="true"
                android:text="@string/_123456789777777"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_below="@id/order_id_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_name"
                android:textAllCaps="true"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/name_value_txt"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/contact_txt"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_below="@id/order_id_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_name"
                android:textColor="@color/LightBlackColor"/>


            <TextView
                android:id="@+id/contact_txt"
                android:layout_width="wrap_content"
                android:layout_below="@id/name_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_contact"
                android:textAllCaps="true"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/contact_value_txt"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/contact_txt"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_below="@id/name_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_name"
                android:textColor="@color/LightBlackColor"/>




            <TextView
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_below="@id/contact_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/status2"
                android:textAllCaps="true"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/status_value_txt"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/contact_txt"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_below="@id/contact_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_name"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_below="@id/status_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/order_date"
                android:textAllCaps="true"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/date_value_txt"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/contact_txt"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_below="@id/status_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_name"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/mode_txt"
                android:layout_width="wrap_content"
                android:layout_below="@id/date_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/payment_mode"
                android:textAllCaps="true"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/mode_value_txt"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/contact_txt"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_below="@id/date_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_name"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/delivery_address_txt"
                android:layout_width="wrap_content"
                android:layout_below="@id/mode_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/delivery_address2"
                android:textAllCaps="true"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/delivery_value_txt"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/contact_txt"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_below="@id/mode_value_txt"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_height="wrap_content"
                android:text="@string/customer_name"
                android:textColor="@color/LightBlackColor"/>

            <TextView
                android:id="@+id/get_directions_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/get_the_directions"
                android:drawablePadding="@dimen/dimen_4dp"
                android:drawableTint="@color/colorPrimaryDark"
                app:drawableTint="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/dimen_8dp"
                android:layout_below="@id/delivery_value_txt"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/signup_bordershape"
                android:drawableEnd="@drawable/ic_baseline_gps_fixed_24"
                app:drawableEndCompat="@drawable/ic_baseline_gps_fixed_24" />

            <RelativeLayout
                android:id="@+id/send_otp_btn"
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_below="@id/get_directions_btn"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingBottom="@dimen/dimen_8dp"
                android:background="@drawable/login_bordershape"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/send_otp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/enter_otp"
                    android:textAllCaps="true"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_toEndOf="@id/send_otp_txt"
                    android:src="@drawable/loginend"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/send_otp_txt"
                    android:layout_marginLeft="8dp"
                    android:contentDescription="@string/todo"
                    android:layout_marginStart="8dp" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>