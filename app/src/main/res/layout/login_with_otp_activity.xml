<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Otp_Login_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="308dp"
                app:cardCornerRadius="180dp"
                app:cardElevation="0dp"
                android:background="@drawable/ic_launcher_background"
                android:layout_marginTop="-100dp"
                android:layout_marginLeft="-64dp"
                android:layout_marginRight="-64dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_launcher_background"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/todo" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/login_logo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_android_black_96dp"
                app:tint="@color/BlackTextColor"
                android:contentDescription="@string/todo" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_logo_img"
                android:layout_margin="32dp"
                app:cardElevation="16dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="32dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_with_otp_txt"
                        android:layout_gravity="center"
                        android:layout_marginBottom="80dp"
                        android:textColor="@color/BlackTextColor"
                        android:textSize="24sp"/>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/user_email_mobile"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false"
                        android:textColorHint="@color/BlackTextColor"
                        android:layout_marginBottom="32dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/BlackTextColor"
                        app:startIconDrawable="@drawable/ic_baseline_smartphone_24"
                        app:startIconTint="@color/colorPrimaryDark">


                        <EditText
                            android:id="@+id/user_email_mobile_input_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_bg_selector"
                            android:hint="@string/mobile_number"
                            android:textColorHint="@color/BlackTextColor"
                            android:textSize="12sp"
                            android:inputType="number"
                            android:textColor="@color/BlackTextColor"
                            android:autofillHints="@null"
                            tools:ignore="TextFields" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/login_bordershape"
                        android:gravity="center"
                        android:text="@string/get_otp"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="14sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>