<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="16dp"
    tools:context=".EditDetailsPopUpActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/edit_details_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_details"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/BlackTextColor"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_name"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="8dp"
                app:hintAnimationEnabled="false"
                android:textColorHint="@color/BlackTextColor"
                app:endIconMode="clear_text"
                app:endIconTint="@color/BlackTextColor"
                app:startIconDrawable="@drawable/personfinal"
                app:startIconTint="@color/colorPrimaryDark">


                <EditText
                    android:id="@+id/user_name_input_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_selector"
                    android:hint="@string/user_name"
                    android:textColorHint="@color/BlackTextColor"
                    android:textSize="12sp"
                    android:inputType="textCapWords"
                    android:textColor="@color/BlackTextColor"
                    android:autofillHints="@null" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_email"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/BlackTextColor"
                app:endIconMode="clear_text"
                app:endIconTint="@color/BlackTextColor"
                app:startIconDrawable="@drawable/mailfinal"
                app:startIconTint="@color/colorPrimaryDark">


                <EditText
                    android:id="@+id/user_email_input_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_selector"
                    android:hint="@string/email"
                    android:textColorHint="@color/BlackTextColor"
                    android:textSize="12sp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/BlackTextColor"
                    android:autofillHints="@null" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_mobile"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/BlackTextColor"
                app:endIconMode="clear_text"
                app:endIconTint="@color/BlackTextColor"
                app:startIconDrawable="@drawable/mobilefinal"
                app:startIconTint="@color/colorPrimaryDark">


                <EditText
                    android:id="@+id/user_mobile_input_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_selector"
                    android:hint="@string/mob_no"
                    android:textColorHint="@color/BlackTextColor"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:textColor="@color/BlackTextColor"
                    android:autofillHints="@null" />

            </com.google.android.material.textfield.TextInputLayout>



            <RelativeLayout
                android:id="@+id/update_btn"
                android:layout_width="208dp"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="6dp"
                android:paddingTop="12dp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:background="@drawable/login_bordershape"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/request_quotation_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/update"
                    android:textAllCaps="true"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="12sp"
                    tools:ignore="SmallSp" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_toEndOf="@id/request_quotation_txt"
                    android:src="@drawable/loginend"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/request_quotation_txt"
                    android:layout_marginLeft="8dp"
                    android:contentDescription="@string/todo"
                    android:layout_marginStart="8dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cancel_btn"
                android:layout_width="208dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="32dp"
                android:paddingLeft="32dp"
                android:background="@drawable/signup_bordershape"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cancel_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_toEndOf="@id/cancel_txt"
                    android:src="@drawable/cross"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/cancel_txt"
                    android:layout_marginLeft="8dp"
                    android:contentDescription="@string/todo"
                    android:layout_marginStart="8dp" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</androidx.cardview.widget.CardView>