<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/whole_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/login_signUp_logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="80dp"
            android:contentDescription="@string/todo"
            android:layout_marginBottom="64dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/login_bordershape"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/SecondaryTextColor"
                    android:textSize="14sp"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/login_with_otp_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:layout_weight="1"
                    android:background="@drawable/signup_bordershape"
                    android:gravity="center"
                    android:text="@string/login_with_otp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="32dp">

                <view
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/LightGrayColor"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/login_with_txt"
                    android:layout_toLeftOf="@+id/login_with_txt" />

                <TextView
                    android:id="@+id/login_with_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_with"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/LightGrayColor"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/login_with_txt"
                    android:layout_toRightOf="@+id/login_with_txt" />
            </RelativeLayout>


            <Button
                android:id="@+id/login_with_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/gray_login_border_shape"
                android:gravity="center"
                android:text="@string/login_with_facebook"
                android:textColor="@color/PrimaryTextColor"
                android:textSize="14sp"
                tools:ignore="UnusedAttribute" />

            <Button
                android:id="@+id/login_with_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginTop="16dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/gray_login_border_shape"
                android:gravity="center"
                android:text="@string/login_with_google"
                android:textColor="@color/PrimaryTextColor"
                android:textSize="14sp"
                tools:ignore="UnusedAttribute" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="32dp">

                <view
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/LightGrayColor"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/or_txt"
                    android:layout_toLeftOf="@+id/or_txt" />

                <TextView
                    android:id="@+id/or_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/LightGrayColor"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/or_txt"
                    android:layout_toRightOf="@+id/or_txt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signup_block"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/noAccount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/don_t_have_an_account"
                    android:textColor="@color/PrimaryTextColor"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/signup_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/noAccount_txt"
                    android:text="@string/signup"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    app:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/noAccount_txt" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>