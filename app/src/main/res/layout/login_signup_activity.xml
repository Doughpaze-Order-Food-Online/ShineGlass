<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginsignupbackground"
    tools:context=".LoginSignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/whole_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingBottom="32dp"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/login_signUp_logo_img"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/shineglasslogo"
            android:layout_marginTop="80dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/todo"
            android:layout_marginBottom="64dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/login_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/login_bordershape"
                    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/login_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/login"
                    android:textAllCaps="true"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="14sp" />
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_toEndOf="@id/login_txt"
                        android:src="@drawable/loginend"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/login_txt"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="@string/todo"
                        android:layout_marginStart="8dp" />

                </RelativeLayout>

                <Button
                    android:id="@+id/login_with_otp_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:background="@drawable/signup_bordershape"
                    android:gravity="center"
                    android:text="@string/login_with_otp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="32dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrayColor"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/login_with_txt"
                    android:layout_toLeftOf="@+id/login_with_txt" />

                <TextView
                    android:id="@+id/login_with_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_with"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrayColor"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/login_with_txt"
                    android:layout_toRightOf="@+id/login_with_txt" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/login_with_facebook_btn"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/gray_login_border_shape"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/login_with_facebook_txt"
                    android:layout_width="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/login_with_facebook"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_toStartOf="@id/login_with_facebook_txt"
                    android:src="@drawable/facebook"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo"
                    android:layout_toLeftOf="@id/login_with_facebook_txt"
                    android:layout_marginRight="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/login_with_google_btn"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@drawable/gray_login_border_shape"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/login_with_google_txt"
                    android:layout_width="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/login_with_google"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@id/login_with_google_txt"
                    android:src="@drawable/google"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/todo"
                    android:layout_toLeftOf="@id/login_with_google_txt"
                    android:layout_marginRight="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrayColor"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/or_txt"
                    android:layout_toLeftOf="@+id/or_txt" />

                <TextView
                    android:id="@+id/or_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryTextColor"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrayColor"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/or_txt"
                    android:layout_toRightOf="@+id/or_txt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signup_block"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/noAccount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/don_t_have_an_account"
                    android:textColor="@color/PrimaryTextColor"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/signup_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/noAccount_txt"
                    android:text="@string/signup"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorPrimaryDark"
                    app:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/noAccount_txt" />
            </RelativeLayout>



        </LinearLayout>




    </ScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>