<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Enter_Otp_Activtiy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="308dp"
                app:cardCornerRadius="180dp"
                app:cardElevation="0dp"
                android:background="@drawable/ic_launcher_background"
                android:layout_marginTop="-100dp"
                android:layout_marginLeft="-64dp"
                android:layout_marginRight="-64dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_launcher_background"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/todo" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/login_logo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_android_black_96dp"
                app:tint="@color/BlackTextColor"
                android:contentDescription="@string/todo" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_logo_img"
                android:layout_margin="32dp"
                app:cardElevation="16dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="32dp"
                    android:paddingBottom="32dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_otp_in_59_sec"
                        android:layout_gravity="center"
                        android:layout_marginBottom="80dp"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="24sp"/>

                    <LinearLayout
                        android:id="@+id/otp_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_bg_selector"
                            android:textColorHint="@color/BlackTextColor"
                            android:layout_weight="1"
                            android:hint="@null"
                            android:maxLength="1"
                            android:inputType="number"
                            android:layout_marginRight="8dp"
                            android:textSize="12sp"
                            android:textColor="@color/BlackTextColor"
                            android:autofillHints="@null"
                            tools:ignore="TextFields"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/edt_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_bg_selector"
                            android:textColorHint="@color/BlackTextColor"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"
                            android:textSize="12sp"
                            android:hint="@null"
                            android:maxLength="1"
                            android:inputType="number"
                            android:textColor="@color/BlackTextColor"
                            android:autofillHints="@null"
                            tools:ignore="TextFields"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/edt_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_bg_selector"
                            android:textColorHint="@color/BlackTextColor"
                            android:layout_marginRight="8dp"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:hint="@null"
                            android:maxLength="1"
                            android:inputType="number"
                            android:textColor="@color/BlackTextColor"
                            android:autofillHints="@null"
                            tools:ignore="TextFields"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/edt_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_bg_selector"
                            android:textColorHint="@color/BlackTextColor"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:hint="@null"
                            android:maxLength="1"
                            android:inputType="number"
                            android:textColor="@color/BlackTextColor"
                            android:autofillHints="@null"
                            tools:ignore="TextFields" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/login_bordershape"
                        android:gravity="center"
                        android:text="@string/get_otp"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/resend_otp_block"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/noAccount_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/didn_t_received_otp"
                            android:textColor="@color/PrimaryTextColor"
                            app:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/signup_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@+id/noAccount_txt"
                            android:text="@string/resend"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            app:fontFamily="sans-serif-medium"
                            android:layout_marginLeft="4dp"
                            android:layout_toRightOf="@+id/noAccount_txt" />
                    </RelativeLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>