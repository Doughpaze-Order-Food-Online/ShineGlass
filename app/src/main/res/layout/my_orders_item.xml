<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_no"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/PrimaryTextColor"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/PrimaryTextColor"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/PrimaryTextColor"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/order_no._txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="158"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/BlackTextColor"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_11_05_2020"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@color/BlackTextColor"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_transit"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/BlackTextColor"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/request_quotation_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:background="@drawable/login_bordershape"
        android:visibility="visible"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/request_quotation_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/eye_img"
            android:layout_toRightOf="@id/eye_img"
            android:fontFamily="sans-serif-medium"
            android:text="@string/view_quotation"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/whiteTextColor"
            android:textSize="8sp"
            android:textStyle="bold"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/eye_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/eye"
            app:tint="@color/whiteTextColor" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_payment_status_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@drawable/login_bordershape"
        android:visibility="visible"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/check_payment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/payment_img"
            android:layout_toRightOf="@id/payment_img"
            android:fontFamily="sans-serif-medium"
            android:text="@string/check_payment_status"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/whiteTextColor"
            android:textSize="8sp"
            android:textStyle="bold"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/payment_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/mytransactions"
            app:tint="@color/whiteTextColor" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>