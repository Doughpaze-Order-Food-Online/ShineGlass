<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryMyAccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_account_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_account"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/BlackTextColor"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="32dp"
            />



        <FrameLayout
            android:id="@+id/personal_details_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_account_txt">

            <androidx.cardview.widget.CardView
                android:id="@+id/persona_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/personal_details_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_horizontal"
                        android:text="@string/personal_details"
                        android:textColor="@color/LightBlackColor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/personal_details_txt"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/name"
                        android:textColor="@color/LightBlackColor"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/personal_details_txt"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/pooja_glass_company"
                        android:textAllCaps="true"
                        android:textColor="@color/LightBlackColor"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />


                    <TextView
                        android:id="@+id/email_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_txt"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/email"
                        android:textAllCaps="true"
                        android:textColor="@color/LightBlackColor"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_name"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/poojamiskin27_gmail_com"
                        android:textColor="@color/LightBlackColor"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_txt"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/ph_no"
                        android:textAllCaps="true"
                        android:textColor="@color/LightBlackColor"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/phone_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_email"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:text="@string/_9876543221"
                        android:textColor="@color/LightBlackColor"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <RelativeLayout
                        android:id="@+id/cancel_btn"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phone_no"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/gray_login_border_shape"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/change_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/lock_img"
                            android:layout_toRightOf="@id/lock_img"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/change_password"
                            android:textAllCaps="true"
                            android:textColor="@color/PrimaryTextColor"
                            android:textSize="8sp"
                            tools:ignore="SmallSp" />

                        <ImageView
                            android:id="@+id/lock_img"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/changepassword2" />

                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_icon_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/my_account_txt"
            android:layout_marginTop="8dp"
            android:src="@drawable/profilepic"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="0.5dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/profile_ellipse_img"
            android:layout_width="56dp"
            android:layout_height="64dp"
            android:layout_below="@+id/my_account_txt"
            android:layout_marginTop="30dp"
            android:src="@drawable/ellipse"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_below="@id/my_account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_details"
            android:textAllCaps="true"
            android:textSize="6sp"
            android:layout_marginTop="57dp"
            android:textColor="@color/whiteTextColor"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"
            tools:ignore="SmallSp" />





        <Button
            android:id="@+id/logout_btn"
            android:layout_below="@id/personal_details_block"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_height="36dp"
            android:background="@drawable/login_bordershape"
            android:text="@string/logout"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:layout_marginBottom="32dp"
            android:textSize="14sp"
            android:textColor="@color/whiteTextColor"
            tools:ignore="SmallSp" />

    </RelativeLayout>

</ScrollView>











