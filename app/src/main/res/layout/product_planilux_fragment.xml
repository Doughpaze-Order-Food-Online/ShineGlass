<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGrayColor"/>


        <TextView
            android:id="@+id/product_planilux_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_planilux"
            android:layout_marginTop="32dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/BlackTextColor"
            android:layout_gravity="center_horizontal"
            />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColorHint="@color/BlackTextColor"
        app:endIconMode="clear_text"
        app:endIconTint="@color/BlackTextColor"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/thickness"
        app:startIconTint="@color/colorPrimaryDark">

        <EditText
            android:id="@+id/thickness_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="no"
            android:background="@drawable/edt_bg_selector"
            android:hint="@string/thickness"
            android:inputType="numberDecimal"
            android:textColorHint="@color/BlackTextColor"
            android:textSize="12sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColorHint="@color/BlackTextColor"
        app:endIconMode="clear_text"
        app:endIconTint="@color/BlackTextColor"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/width"
        app:startIconTint="@color/colorPrimaryDark">

        <EditText
            android:id="@+id/strength_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="no"
            android:background="@drawable/edt_bg_selector"
            android:hint="@string/strength"
            android:inputType="numberDecimal"
            android:textColorHint="@color/BlackTextColor"
            android:textSize="12sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Design.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColorHint="@color/BlackTextColor"
        app:endIconMode="clear_text"
        app:endIconTint="@color/BlackTextColor"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/packagetype"
        app:startIconTint="@color/colorPrimaryDark">

        <EditText
            android:id="@+id/packType_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="no"
            android:background="@drawable/edt_bg_selector"
            android:hint="@string/pack_type"
            android:inputType="numberDecimal"
            android:textColorHint="@color/BlackTextColor"
            android:textSize="12sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/request_quotation_btn"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_bordershape"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/request_quotation_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/add_to_cart"
            android:textAllCaps="true"
            android:textColor="@color/whiteTextColor"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/request_quotation_txt"
            android:layout_toRightOf="@id/request_quotation_txt"
            android:contentDescription="@string/todo"
            android:src="@drawable/addtocart" />

    </RelativeLayout>

</LinearLayout>
